<!DOCTYPE html>
<html lang="en">
<%- include('header'); -%>

    <body>
        <!-- Navbar -->
        <%- include('navbar'); -%>

            <main class="secondary">

                <section class="inner-wrap">
                    <h1>
                        <%= message %>
                    </h1>

                    <% if(employees.length) { %>

                        <a class="btn-new" href="/new">Add New</a>

                        <table class="employee">
                            <thead>
                                <tr>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% employees.forEach(function (entry) { %>
                                    <tr>
                                        <td>
                                            <%= entry.firstName %>
                                        </td>
                                        <td>
                                            <%= entry.lastName %>
                                        </td>
                                    </tr>

                                    <% }) %>
                            </tbody>

                        </table>

                        <% } else { %>
                            No Entries! <a href="/new">Add One!</a>
                            <% } %>

                </section>
            </main>



            <!-- Footer -->
            <%- include('footer'); -%>


                <!-- Script  -->
                <% - include('scripts'); -%>


    </body>

</html>
